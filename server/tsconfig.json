{
  "compilerOptions": {

    "rootDir": "./",
    "outDir": "./dist",

    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck":true,
},
"include": ["src", "models"],  // explicitly include models folder
"exclude": ["node_modules"]


}